@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarManagementSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-oZK8..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                    EV Dealer
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Promotions" asp-action="Index">Khuyến mãi</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ElectricVehicles" asp-action="Index">Xe điện</a></li>
                        <vc:cart-count></vc:cart-count>
                        @if (Context.Session.GetInt32("UserId") == null)
                        {
                            <!-- Nếu chưa login -->
                            <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Đăng nhập</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Register">Đăng ký</a></li>
                        }
                        else
                        {
                            <!-- Nếu đã login -->
                            <li class="nav-item fw-bold">
                                <a class="btn btn-light border ms-2"
                                   asp-controller="User"
                                   asp-action="Edit"
                                   asp-route-id="@Context.Session.GetInt32("UserId")">
                                    <span class="text-dark">User:</span>
                                    <span class="text-danger">@Context.Session.GetString("UserFullName")</span>
                                </a>
                            </li>

                            <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout">Đăng xuất</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light pt-5 pb-4 mt-5">
        <div class="container">
            <div class="row g-4">
                <!-- Thông tin thương hiệu -->
                <div class="col-lg-4">
                    <h4 class="fw-bold text-electric">⚡ EV Dealer</h4>
                    <p class="small text-secondary">
                        Đại lý xe điện chính hãng – Xanh sạch, thông minh và bền vững.
                    </p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-light fs-5"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light fs-5"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <!-- Liên hệ -->
                <div class="col-lg-4">
                    <h6 class="fw-semibold text-uppercase mb-3">Liên hệ</h6>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-map-marker-alt me-2 text-electric"></i> 21 Thái Hà, Hà Nội</li>
                        <li><i class="fas fa-phone me-2 text-electric"></i> 0976 475 789</li>
                        <li><i class="fas fa-envelope me-2 text-electric"></i> support@evdealer.vn</li>
                    </ul>
                </div>

                <!-- Khám phá -->
                <div class="col-lg-4">
                    <h6 class="fw-semibold text-uppercase mb-3">Khám phá</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/ElectricVehicles" class="text-light text-decoration-none hover-electric">Xe điện</a></li>
                        <li><a href="/Promotions" class="text-light text-decoration-none hover-electric">Khuyến mãi</a></li>
                        <li><a href="/About" class="text-light text-decoration-none hover-electric">Về chúng tôi</a></li>
                        <li><a href="/Contact" class="text-light text-decoration-none hover-electric">Liên hệ</a></li>
                    </ul>
                </div>
            </div>

            <!-- Divider -->
            <hr class="border-secondary mt-4 mb-3">

            <!-- Bottom bar -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <p class="small mb-0">&copy; 2025 EV Dealer. All rights reserved.</p>
                <div class="d-flex gap-3 small">
                    <a href="/Home/Privacy" class="text-secondary text-decoration-none hover-electric">Chính sách bảo mật</a>
                    <span class="text-secondary">•</span>
                    <a href="/Terms" class="text-secondary text-decoration-none hover-electric">Điều khoản</a>
                    <span class="text-secondary">•</span>
                    <a href="/Help" class="text-secondary text-decoration-none hover-electric">Hỗ trợ</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
