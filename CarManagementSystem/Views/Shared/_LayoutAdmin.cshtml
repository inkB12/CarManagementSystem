<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- Icon -->
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-white py-4 px-3 fs-5">
                <i class="fas fa-tools me-2"></i>Admin Panel
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">Users</a>
                <a asp-controller="CarCompanies" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">Car Companies</a>
                <a asp-controller="VehicleCategories" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">Categories</a>
                <a asp-controller="ElectricVehicles" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">Vehicles</a>
                <a asp-controller="Orders" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">Orders</a>
                <a asp-controller="Promotions" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">Promotions</a>
                <a asp-controller="Reports" asp-action="SalesByStaff" class="list-group-item list-group-item-action bg-dark text-white">Reports</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ms-auto dropdown">
                        <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTT1L6cWADa5B3WbXiuw_UPN4Qqv9cGe0uGjg&s" alt="" width="32" height="32" class="rounded-circle me-2">
                            <strong>Admin</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser">
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Toggle the sidebar
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
</body>
</html>
