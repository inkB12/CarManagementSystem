@model CarManagementSystem.WebMVC.Models.CarCompanyViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa hãng xe";
}

<h2>Thay đổi hãng xe</h2>

<form asp-action="Edit" method="post" novalidate>
    @Html.HiddenFor(m => m.Id)

    <div class="mb-3">
        <label asp-for="CatalogName" class="form-label"></label>
        <input asp-for="CatalogName" class="form-control" />
        <span asp-validation-for="CatalogName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- ❌ bỏ field IsActive -->

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
