@model CarManagementSystem.WebMVC.Models.CarCompanyViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm hãng xe";
}

<h2>Thêm mới hãng xe</h2>

<form asp-action="Create" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="CatalogName" class="form-label"></label>
        <input asp-for="CatalogName" class="form-control" />
        <span asp-validation-for="CatalogName" class="text-danger"></span>
    </div>

    <div class="mb-3"
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
</form>
