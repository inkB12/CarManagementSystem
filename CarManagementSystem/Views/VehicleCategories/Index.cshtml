@model List<CarManagementSystem.WebMVC.Models.VehicleCategoryViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Vehicle Categories";
}

<h2>Quản lý loại xe</h2>

<!-- Hiển thị thông báo -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<a asp-action="Create" class="btn btn-primary mb-3">+ Thêm danh mục</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Hoạt động</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@(item.IsActive ? "✔️" : "❌")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
