@model CarManagementSystem.WebMVC.Models.VehicleCategoryViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Xóa danh mục";
}

<h2>Xóa danh mục</h2>

<div class="alert alert-danger">
    Bạn có chắc chắn muốn xóa danh mục <strong>@Model.CategoryName</strong>?
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Đồng ý, Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
