@model CarManagementSystem.WebMVC.Models.ElectricVehicleDetailVM

<div class="container py-5">
	<!-- breadcrumb -->
	<nav aria-label="breadcrumb" class="mb-3">
		<ol class="breadcrumb small">
			<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
			<li class="breadcrumb-item"><a href="/ElectricVehicles">Xe điện</a></li>
			<li class="breadcrumb-item active" aria-current="page">@Model.Model</li>
		</ol>
	</nav>

	<div class="row g-4">
		<!-- LEFT: image gallery (1 ảnh chính) -->
		<div class="col-12 col-lg-6">
			<div class="ratio ratio-4x3 rounded-4 overflow-hidden shadow-sm border hover-zoom">
				<img id="mainImg"
					 src="@(Model.ImageUrl ?? "https://placehold.co/900x600?text=EV")"
					 alt="@Model.Model"
					 class="w-100 h-100 object-cover" />
			</div>
			<div class="d-flex gap-2 mt-3">
				<!-- nếu sau này có nhiều ảnh, thêm thumbnail vào đây -->
				<img src="@(Model.ImageUrl ?? "https://placehold.co/160x100?text=EV")"
					 class="thumb border rounded-3"
					 style="width:100px;height:70px;object-fit:cover;cursor:pointer;"
					 onclick="swapImg(this.src)" />
			</div>
		</div>

		<!-- RIGHT: info + CTA -->
		<div class="col-12 col-lg-6">
			<div class="card border-0 shadow-sm">
				<div class="card-body p-4">
					<div class="d-flex justify-content-between align-items-start">
						<div>
							<div class="text-uppercase small text-muted mb-1">@Model.CompanyName • @Model.CategoryName</div>
							<h1 class="h3 mb-0">@Model.Model @(!string.IsNullOrWhiteSpace(Model.Version) ? $"({Model.Version})" : "")</h1>
						</div>
						<span class="badge bg-success-subtle text-success border">Còn hàng</span>
					</div>

					<div class="display-6 fw-bold text-primary my-3">@Model.Price.ToString("C0")</div>

					@if (!string.IsNullOrWhiteSpace(Model.Color))
					{
						<div class="mb-3">
							<span class="fw-semibold">Màu sắc:</span>
							<span class="ms-2 badge rounded-pill bg-light text-dark border">@Model.Color</span>
						</div>
					}

					<div class="mb-3">
						<div class="fw-semibold mb-2">Đặc tả nổi bật</div>
						@if (Model.SpecLines.Any())
						{
							<ul class="list-unstyled vstack gap-1">
								@foreach (var line in Model.SpecLines.Take(6))
								{
									<li><i class="bi bi-check2-circle text-success me-2"></i>@line</li>
								}
							</ul>
						}
						else if (!string.IsNullOrWhiteSpace(Model.Specification))
						{
							<p class="text-secondary">@Model.Specification</p>
						}
						else
						{
							<div class="text-secondary">Chưa cập nhật thông số.</div>
						}
					</div>

					<div class="d-grid gap-2 mt-4">
						@if (ViewBag.IsInCart)
						{
							<form asp-action="UpdateCart" asp-controller="Cart" method="post" class="d-inline-flex align-items-center">
								<input type="hidden" name="carId" value="@Model.Id" />
								<input type="hidden" name="control" value="ElectricVehicles" />

								@* Decrease Quantity *@
								<button type="submit" name="quantity" value="-1"
										class="btn btn-sm btn-outline-secondary"
										title="Giảm số lượng">
									-
								</button>

								@* Quantity *@
								<input type="text" value="@ViewBag.Quantity" class="form-control text-center mx-1"
									   style="width: 50px;" readonly />

								@* Increase Quantity *@
								<button type="submit" name="quantity" value="1"
										class="btn btn-sm btn-outline-secondary"
										title="Tăng số lượng">
									+
								</button>
							</form>
						}
						else
						{
							<form asp-action="AddToCart" asp-controller="Cart" method="post">
								<input type="hidden" name="carId" value="@Model.Id" />
								<input type="hidden" name="quantity" value="1" />
								<button type="submit" class="btn btn-primary btn-lg bounce">
									<i class="bi bi-lightning-charge me-2"></i> Thêm vào giỏ hàng
								</button>
							</form>
						}

						<a class="btn btn-outline-secondary" href="javascript:history.back()">← Quay lại</a>
					</div>
				</div>
			</div>

			<!-- Thông tin thêm -->
			<div class="mt-3 small text-muted">
				* Giá đã bao gồm VAT. Hỗ trợ trả góp & lái thử. Bảo hành chính hãng.
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		function swapImg(src) {
			const main = document.getElementById('mainImg');
			if (main && src) main.src = src;
		}
	</script>
}

<style>
	/* Hover & animation nhẹ */
	.hover-zoom img {
		transition: transform .35s ease;
	}

	.hover-zoom:hover img {
		transform: scale(1.03);
	}

	.bounce {
		transition: transform .15s;
	}

		.bounce:hover {
			transform: translateY(-2px);
		}

	.object-cover {
		object-fit: cover;
	}
</style>
