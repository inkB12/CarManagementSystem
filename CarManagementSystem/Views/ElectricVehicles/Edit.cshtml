@model CarManagementSystem.WebMVC.Models.VehicleViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa xe điện";
}

<h2>Chỉnh sửa xe điện</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
    @Html.HiddenFor(m => m.Id)

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Version" class="form-label"></label>
        <input asp-for="Version" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Specification" class="form-label"></label>
        <textarea asp-for="Specification" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Cập nhật ảnh</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <p>Ảnh hiện tại:</p>
            <img src="@Model.ImageUrl" style="max-width: 150px;" />
        }
    </div>

    <div class="mb-3">
        <label asp-for="CarCompanyId" class="form-label">Hãng xe</label>
        <select asp-for="CarCompanyId" asp-items="ViewBag.CarCompanies" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="VehicleCategoryId" class="form-label">Danh mục</label>
        <select asp-for="VehicleCategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
    </div>


    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="IndexAdmin" class="btn btn-secondary">Quay lại</a>
</form>
