@model IEnumerable<CarManagementSystem.BusinessObjects.User>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Người dùng";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Người dùng</h3>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i>Tạo mới</a>
</div>

<div class="card p-3">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Role</th>
                    <th>Active</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.FullName</td>
                        <td>@u.Email</td>
                        <td>@u.Phone</td>
                        <td><span class="badge bg-secondary">@u.Role</span></td>
                        <td>
                            @if (u.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {

                                <span class="badge bg-danger">Disabled</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditAdmin" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
