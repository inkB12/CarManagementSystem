@model CarManagementSystem.WebMVC.Models.DashboardViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Hãng xe</h5>
                <p class="card-text fs-4">@Model.TotalCarCompanies</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Danh mục xe</h5>
                <p class="card-text fs-4">@Model.TotalCategories</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Tổng số xe</h5>
                <p class="card-text fs-4">@Model.TotalVehicles</p>
            </div>
        </div>
    </div>
</div>
