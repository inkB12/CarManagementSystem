@model CarManagementSystem.WebMVC.Models.CheckoutViewModel

@{
	ViewData["Title"] = "Checkout";
}

<form asp-action="Checkout" method="post">
	<h2 style="margin-top:30px">Chi tiết thanh toán</h2>

	<div style="margin:20px">
		<h4>Thông tin khách hàng</h4>

		<p>Địa chỉ Email *</p>
		<div>
			<input asp-for="CustomerInfo.Email" class="form-control" />
			<span asp-validation-for="CustomerInfo.Email" class="text-danger"></span>
		</div>

		<p>Tên *</p>
		<div>
			<input asp-for="CustomerInfo.FullName" class="form-control" />
			<span asp-validation-for="CustomerInfo.FullName" class="text-danger"></span>
		</div>

		<p>Số điện thoại *</p>
		<div>
			<input asp-for="CustomerInfo.Phone" class="form-control" />
			<span asp-validation-for="CustomerInfo.Phone" class="text-danger"></span>
		</div>
	</div>

	<div style="margin:20px">
		<h4 >Thông tin địa chỉ</h4>

		<p>Địa chỉ chi tiết *</p>
		<div>
			<input asp-for="AddressInfo.Address" class="form-control" />
			<span asp-validation-for="AddressInfo.Address" class="text-danger"></span>
		</div>

		<p>Mã bưu điện *</p>
		<div>
			<input asp-for="AddressInfo.ZipCode" class="form-control" />
			<span asp-validation-for="AddressInfo.ZipCode" class="text-danger"></span>
		</div>

		<p>Ghi chú </p>
		<div>
			<input asp-for="AddressInfo.Note" class="form-control" />
			<span asp-validation-for="AddressInfo.Note" class="text-danger"></span>
		</div>
	</div>

	<div style="margin:20px">
		<h4>Thông tin thanh toán</h4>

		<p>Phương thức thanh toán *</p>
		<div>
			<input asp-for="PaymentMethod" class="form-control" />
			<span asp-validation-for="PaymentMethod" class="text-danger"></span>
		</div>

		<p>Mã giảm giá </p>
		<div>
			<input asp-for="PromotionId" class="form-control" />
			<span asp-validation-for="PromotionId" class="text-danger"></span>
		</div>
	</div>
	
	<p>Tôi đã đọc và đồng ý với Điều khoản & Điều kiện của website *</p>
	<input asp-for="TermsAccepted" class="form-control" />
	<span asp-validation-for="TermsAccepted" class="text-danger"></span>p></p>

	<button type="submit" style="margin-top:15px">Thanh toán</button>
</form>
