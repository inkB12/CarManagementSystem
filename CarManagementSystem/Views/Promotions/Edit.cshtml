@model CarManagementSystem.WebMVC.Models.PromotionFormViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
}
<h1 class="mb-4">Chỉnh sửa khuyến mãi</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-route="AdminPromotionEditPost" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Discount" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Discount" type="number" step="0.1" min="0" class="form-control" />
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check2-circle me-1"></i> Cập nhật
                </button>
                <a asp-route="AdminPromotionIndex" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}