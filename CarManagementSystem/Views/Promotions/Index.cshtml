@model CarManagementSystem.WebMVC.Models.PromotionListViewModels
@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Khuyến mãi";
}

<div class="mb-3">
    <h2 class="mb-0">Quản lý khuyến mãi</h2>
    @if (ViewBag.Role == "Admin")
    {
        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="bi bi-plus-lg me-1"></i> Thêm mã khuyến mãi
        </a>
    }
</div>


<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-6">
        <label class="form-label">Tìm kiếm</label>
        <input class="form-control" name="q" value="@Model.Q" placeholder="Mã / mô tả..." />
    </div>
    <div class="col-md-3">
        <label class="form-label">Trạng thái</label>
        <select asp-for="Status" asp-items="Model.StatusOptions" class="form-select">

        </select>
    </div>
    <div class="col-md-3 d-grid">
        <button type="submit" class="btn btn-outline-primary">Lọc</button>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:140px">Mã</th>
                    <th>Mô tả</th>
                    <th class="text-center" style="width:100px">Giảm</th>
                    <th class="text-center" style="width:120px">Trạng thái</th>
                    <th style="width:160px"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Items == null || !Model.Items.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">Không có dữ liệu</td>
                    </tr>
                }
                else
                {
                    foreach (var x in Model.Items)
                    {
                        <tr>
                            <td><span class="badge bg-dark-subtle text-dark border">@x.Code</span></td>
                            <td class="text-truncate" style="max-width:520px">@x.Description</td>
                            <td class="text-center">
                                <span class="badge bg-primary-subtle text-primary border">-@x.Discount.ToString("0.#")%</span>
                            </td>
                            <td class="text-center">
                                @if (x.Status.Equals("Active", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-success-subtle text-success border">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border">Inactive</span>
                                }
                            </td>

                            @if(ViewBag.Role == "Admin")
                            {
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model?.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @{
                string Link(int p) => Url.Action("Index", "Promotions",
                new { page = p, pageSize = Model.PageSize, q = Model.Q, status = Model.Status })!;
            }
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : null)">
                <a class="page-link" href="@(Model.CurrentPage > 1 ? Link(Model.CurrentPage - 1) : "#")">Trước</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : null)">
                    <a class="page-link" href="@Link(i)">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : null)">
                <a class="page-link" href="@(Model.CurrentPage < Model.TotalPages ? Link(Model.CurrentPage + 1) : "#")">Sau</a>
            </li>
        </ul>
    </nav>
}
