@model CarManagementSystem.WebMVC.Models.FeedbackViewModel
@{
    ViewData["Title"] = "Gửi phản hồi";
}
<div class="container py-5" style="max-width:700px;">
    <h2 class="mb-4 fw-bold">Gửi phản hồi</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="FeedbackType" class="form-label"></label>
                    <select asp-for="FeedbackType" class="form-select">
                        <option value="">-- Chọn loại --</option>
                        <option>Đóng góp</option>
                        <option>Phàn nàn</option>
                        <option>Khác</option>
                    </select>
                    <span asp-validation-for="FeedbackType" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>
                <button class="btn btn-primary">Gửi</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
