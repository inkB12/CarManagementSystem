@model CarManagementSystem.WebMVC.Models.AdminFeedbackViewModel
@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Xóa feedback";
}

<div class="card p-4">
    <h4 class="text-danger mb-3">Xóa vĩnh viễn feedback này?</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">UserId</dt>
        <dd class="col-sm-10">
            @Model.UserId
            @if (!string.IsNullOrEmpty(Model.UserFullName) || !string.IsNullOrEmpty(Model.UserEmail))
            {
                <div class="text-muted small">
                    @(string.Join(" • ", new[] { Model.UserFullName, Model.UserEmail }.Where(x => !string.IsNullOrWhiteSpace(x))))
                </div>
            }
        </dd>
        <dt class="col-sm-2">Loại</dt>
        <dd class="col-sm-10">@Model.FeedbackType</dd>
        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Thời gian</dt>
        <dd class="col-sm-10">@Model.Datetime.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="IndexAdmin" class="btn btn-secondary">Hủy</a>
    </form>
</div>
